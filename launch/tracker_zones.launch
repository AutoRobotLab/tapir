<launch>

	<!-- launch octomap server -->
	<node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
		<param name="resolution" value="0.125" />
		
		<!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
		<param name="frame_id" type="string" value="odom" />
		
		<!-- maximum range to integrate (speedup!) -->
		<!-- should be less than actual scan range if laser scanner puts artificial points at max range -->
		<param name="sensor_model/max_range" value="6.0" />
		
		<!-- data source to integrate (PointCloud2) -->
		<!-- <remap from="cloud_in" to="/narrow_stereo/points_filtered2" /> -->
	
	</node>

	<node pkg="tapir" type="scan_to_pcl_node" name="scan_to_pcl_node"/>

	<include file="$(find tapir)/launch/husky_vrep.launch"/>

	<!-- tracker node -->
	<param name="target_policy" value="1" />
	<node pkg="tapir" type="tracker_node" name="tracker_node" output="screen"/>
</launch>